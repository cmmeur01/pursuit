<!DOCTYPE html>
<html>
  <head>
    <title>Pursuit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
    <% if current_user %>
      window.currentUser = { 
        "id": "<%= current_user.id %>",
        "username": "<%= current_user.username %>",
      };
    <% else %>
      window.currentUser = null;
    <% end %>
    </script> 
  </head>

  <body>
    <%= yield %>
  </body>
</html>
